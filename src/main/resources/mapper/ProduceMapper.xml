  <select id="findAllRecommend" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select * from Produce  where pro_recommend=#{proRecommend};
  </select>
  <select id="findAllByCondition" parameterType="com.mx.minnong.pojo.qo.ProduceQO" resultMap="BaseResultMap">
    SELECT * FROM Produce a join seller b on a.pro_seller=b.sel_id where
    <if test="proName!=null and proName!=''">pro_name like "%"#{proName}"%" and</if>
    <if test="proClassify!=null ">pro_classify=#{proClassify} and</if>
    <if test="proSclassify!=null ">pro_sclassify=#{proSclassify} and</if>
    <if test="proProvince!=null and proProvince!=''">pro_province=#{proProvince} and</if>
    <if test="proCity!=null and proCity!=''">pro_city=#{proCity} and</if>
    <if test="proDistrict!=null and proDistrict!=''">pro_district=#{proDistrict} and</if>
    <if test="proKind!=null ">pro_kind=#{proKind} and</if>
    <if test="proLowest!=null">pro_price >= #{proLowest} and</if>
    <if test="proHighest!=null">
      pro_price &lt;= #{proHighest} and
    </if>
    1=1  and a.pro_id is not null
  </select>
  <select id="findById" parameterType="java.lang.Integer"  resultMap="BaseResultMap">
    select * from Produce a join seller b on a.pro_seller=b.sel_id where pro_id=#{proId} and a.pro_id is not null
  </select>

  <select id="findByProseller" resultMap="BaseResultMap" parameterType="java.lang.Integer">
